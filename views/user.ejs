
<link rel="stylesheet" href="/css/user_profile.css">
<h1>The user interface is as follow <%= title %></h1>

<img src="<%= user.avatar %>" alt=" <%= user.name %>" width="100">

<% if(user.id == profile_users.id){ %>
    <form action="/users/update/<%= profile_users.id %>" method="post" enctype="multipart/form-data">
        <input type="text" name = "name" placeholder="Your name" value="<%= profile_users.name %>" required>
        <input type="email" name = "email" placeholder="Your email" value="<%= profile_users.email %>" required>
        <input type="file" name="avatar" placeholder="Profile picture">
        <input type="submit" value="Update Profile">
    </form>
<% }else{ %>  

    <h1>
        <p> <%= profile_users.name %> </p>
        <p> <%= profile_users.email %> </p>
    </h1>

<% } %>   